<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Image</th>
      <th>Operaciones</th>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>{{stock}}</td>
          <td>{{image}}</td>
          <td>
            <a href="/edit/{{_id}}" class="btn btn-success m-2">Editar</a>
            <a href="/delete/{{_id}}"class="btn btn-danger">Eliminar</a>
          </td>
        </tr>
        {{else}}
            <div class="alert text-center alert-info" role="alert">
                <h2>No hay productos </h2class=>
            </div>

        {{/each}}
    </tbody>
  </table>
</div>